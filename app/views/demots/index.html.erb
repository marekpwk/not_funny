<div class="row">
  <%= will_paginate @demots, renderer: FoundationPagination::Rails %>

  <% @demots.each do |demot| %>
    <div class="radius small-12 small-centered  large-8  large-centered columns demots-column">
    <h3> <%= demot.title %></h3>
    <%= image_tag(demot.image) %>
    <div id="vote-<%= demot.id %>" style="display:none;"></div>
    <div class="row">
      <div class="small-8  columns votes">
        <p id="votes-<%= demot.id %>"><%= pluralize(demot.votes.count,"point") %></p>
      </div>
    </div>
    <div class="row">
      <div class="small-4 large-3 columns arrows">
        <% if signed_in? %>
          <%= link_to '',up_demot_path(demot, :user_id => current_user.id),method: "put",remote: true, :class=> "fi-arrow-up" %>
        <%= link_to '', down_demot_path(demot, :user_id => current_user.id),method: "put", remote: true, :class=> "fi-arrow-down" %>
      <% else %>
          <%= link_to '', signin_path, :class=> "fi-arrow-up" %>
        <%= link_to '', signin_path, :class=> "fi-arrow-down" %>
      <% end %>
      </div>
      <div class=" small-7 large-6 large-offset-2 columns sharing-container">
        <a href="http://twitter.com/home?status=<%= request.host + url_for(demot) %>" title="<%= demot.title %>" target="_blank" class= "sharing-buttons button radius small"><i class="fi-social-twitter"></i><span>Twitter</span></a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.host + url_for(demot) %>" title="<%= demot.title %>" target="_blank" class="sharing-buttons button radius small face"><i class="fi-social-facebook"></i> <span>Facebook</span></a>
      </div>
    </div>
  </div>

<% end %>

  <%= will_paginate @demots, renderer: FoundationPagination::Rails %>

</div>
