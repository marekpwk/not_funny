<h2>Update your profile</h2>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
 <%= f.text_field :name %>
  
 <%= f.label :email%>
 <%= f.text_field :email %>
 
 <%= f.label :password %>
 <%= f.text_field :password %>

 <%= f.label :password_confirmation, "Confirmation" %>
 <%= f.text_field :password_confirmation %>

 <%= f.submit "Save changes" %>
 
<% end %>
