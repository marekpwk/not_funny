<div class="row">
  <div class="small-6 columns">
    <h1>Sign in</h1>

    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit "Sign in", :class => "button small radius" %>

  <% end %>
  </div>
  <div class="small-4 columns">
    <h2>Or register</h2>
    <%= link_to "Register", new_user_path, :class=> "button small radius" %>
  </div>
</div>
